
<%= form_with model: [:admin, @email_preference], local: true do |f| %>
  <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :monthly_opt_out %>
    <%= f.check_box :monthly_opt_out %>
  </p>
  <p>
    <%= f.label :alternate_email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit class: 'btn btn-primary'  %>
  </p>
<% end %>
